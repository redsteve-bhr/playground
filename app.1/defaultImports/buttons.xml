    <!-- ================================================================= -->
    <!-- Employee Options Menu -->
    <!-- ================================================================= -->
    <menu name="emp.options.menu">
        <properties>
            <property name="screen.background">idleImageBack</property>
            <property name="title.text">
                <text language="fr">Employé Options - ${employee.name}</text>
                <text language="en">Employee Options - ${employee.name}</text>
                <text language="es">Opciones del empleado - ${employee.name}</text>
            </property>
        </properties>

        <button>
            <action>
                <ws.clocking>
                    <antipassback>
                        <node>1</node>
                        <time>30</time>
                    </antipassback>
                    <response>
                        <text language="en">Punch accepted</text>
                    </response>
                    <relay>
                        <ioboard>1</ioboard>
                        <relayNumber>1</relayNumber>
                        <duration>2</duration>
                    </relay>
                    <type>in</type>
                </ws.clocking>
            </action>
            <label>
                <text language="en">Punch</text>
                <text language="es">Registre</text>
                <text language="fr">Pointage</text>
            </label>
            <options>
                <dialogTimeout>30</dialogTimeout>
            </options>
        </button>
        
        <button>
            <action>
                <ws.clocking>
                    <antipassback>
                        <node>1</node>
                        <time>5</time>
                    </antipassback>
                    <response>
                        <showClockingResponseDialog>false</showClockingResponseDialog>
                        <text language="en">Punch accepted</text>
                        <text language="fr">Punch accepté</text>
                        <text language="es">Registro aceptado</text>
                    </response>
                    <review>
                        <text language="en">Punched</text>
                        <text language="fr">Poing</text>
                        <text language="es">Registro</text>
                    </review>
                    <type>in</type>

                    <restrictions>
                        <!--  Timeout for are you ending shift dialog-->
                        <dialogTimeout>20</dialogTimeout>
                        <earlyStartMins>15</earlyStartMins>
                        <lateEndMins>120</lateEndMins>

                        <online>
                            <onlineOnly>false</onlineOnly>
                            <!-- the online check runs first if enabled -->
                            <!-- if the tags are missing then the checks will be skipped -->
                            <checkHealthAttest />
                            <checkSupervisorOverride />
                            <checkSchedules>
                                <!-- If false or tag omitted and scheduled for current day then punch is allowed
                                     If true must have active schedule to clock -->
                                <strict>false</strict>
                            </checkSchedules>
                            <checkLastClocking>
                                <!-- if the last clocking is one of these types then we must wait a-->
                                <!-- minimum of 20 mins before clocking again -->
                                <!-- A value of '*' will restrict all clocking types -->
                                <type>clocking,clk,in,out</type>
                                <minimumElapsedMins>1</minimumElapsedMins>
                            </checkLastClocking>
                        </online>

                        <offline>
                            <!-- the offline tag enables the offline schedule check. The offline
                            schedule check will not be run if the online check has already run -->
                            <checkSchedules>
                                <!-- If false or tag omitted and scheduled for current day then punch is allowed
                                     If true must have active schedule to clock -->
                                <strict>false</strict>
                            </checkSchedules>
                        </offline>
                    </restrictions>

                    <timecard>
                        <dialogTimeout>10</dialogTimeout>
                        <!-- this allows the user to approves / decline the timecard and select reasons for declining -->
                        <title>
                            <text language="en">Select timecard to approve - ${employee.name}</text>
                        </title>
                    </timecard>

                </ws.clocking>

            </action>
            <label>
                <text language="en">Restricted Punch</text>
                <text language="es">Restringido Registre</text>
                <text language="fr">Pestreinte Pointage</text>
            </label>

            <options>
                <dialogTimeout>30</dialogTimeout>
            </options>
        </button>


        <button>
            <action>
                <ws.clocking>
                    <antipassback>
                        <node>1</node>
                        <time>5</time>
                    </antipassback>
                    <response>
                        <text language="en">Punch accepted</text>
                        <text language="fr">Punch accepté</text>
                        <text language="es">Registro aceptado</text>
                    </response>
                    <review>
                        <text language="en">Punched</text>
                        <text language="fr">Poing</text>
                        <text language="es">Registro</text>
                    </review>
                    <relay>
                        <ioboard>1</ioboard>
                        <relayNumber>1</relayNumber>
                        <duration>2</duration>
                    </relay>
                    <type>transferAndPunch</type>
                    <restrictions>
                        <!--  Timeout for are you ending shift dialog-->
                        <dialogTimeout>20</dialogTimeout>
                        <earlyStartMins>15</earlyStartMins>
                        <lateEndMins>120</lateEndMins>
                        <!-- the online check runs first if enabled -->
                        <online>
                            <!-- if the tags are missing then the checks will be skipped -->
                            <checkHealthAttest />
                            <checkSupervisorOverride />
                            <checkSchedules>
                                <strict>false</strict>
                            </checkSchedules>
                            <checkLastClocking>
                                <!-- if the last clocking is one of these types then we must wait a-->
                                <!-- minimum of 20 mins before clocking again -->
                                <!-- A value of '*' will restrict all clocking types -->
                                <type>clk,in,out</type>
                                <minimumElapsedMins>20</minimumElapsedMins>
                            </checkLastClocking>
                        </online>
                        <offline>
                            <!-- the offline tag enables the offline schedule check. The offline
                            schedule check will not be run if the online check has already run -->
                            <checkSchedules>
                                <strict>false</strict>
                            </checkSchedules>
                        </offline>
                    </restrictions>
                    <timecard>
                        <!-- this allows the user to approves / decline the timecard and select reasons for declining -->
                        <title>
                            <text language="en">Select timecard to approve - ${employee.name}</text>
                        </title>
                    </timecard>
                    <transfer>
                        <title>
                            <text language="en">Transfer and Punch - ${employee.name}</text>
                            <text language="es">Transfer and Punch - ${employee.name}</text>
                            <text language="fr">Transfer and Punch - ${employee.name}</text>
                        </title>
                        <!-- To limit to a specific level(s), add the following -->
                        <!-- <promptLevel>1</promptLevel> -->
                        <!-- <promptLevel>2</promptLevel> -->
                    </transfer>

                </ws.clocking>
            </action>
            <label>
                <text language="en">Transfer and Punch</text>
                <text language="es">Transfer and Punch</text>
                <text language="fr">Transfer and Punch</text>
            </label>
            <options>
                <dialogTimeout>30</dialogTimeout>
            </options>
        </button>

        <button>
            <action>
                <go.to.menu name="menu.grid.selfservice" />
            </action>
            <icon>ic_service</icon>
            <label>
                <text language="en">Self Service</text>
                <text language="es">Autoservicio</text>
                <text language="fr">Auto-service</text>
            </label>
            <onExit>
                <returnTo target="home" />
            </onExit>
        </button>

        <button>
            <action>
                <go.to.menu name="menu.grid.employee.supervisor" />
            </action>
            <icon>ic_supervisor</icon>
            <label>
                <text language="en">Supervisor</text>
                <text language="es">Supervisor</text>
                <text language="fr">Superviseur</text>
            </label>
            <requiredRole>supervisor</requiredRole>
            <onExit>
                <returnTo target="home" />
            </onExit>
        </button>

        <button>
          <action>
            <btn.back/>
          </action>
        </button>
    </menu>

